<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emergencia.SecondFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAtendimentoAceito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:text="Atendimento Aceito!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAtendimentoAceito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imgaceito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAtendimentoAceito" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNumeroDeTelefoneAtendimentoAceito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de telefone"
        android:background="@drawable/borda"
        android:textSize="17sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivAtendimentoAceito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCopy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="@drawable/ic_copy"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="55dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/tvNumeroDeTelefoneAtendimentoAceito"
        app:layout_constraintTop_toBottomOf="@+id/ivAtendimentoAceito" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviarLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Localização"
        android:layout_marginStart="70dp"

        app:layout_constraintStart_toStartOf="@id/btnCancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNumeroDeTelefoneAtendimentoAceito"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Cancelar"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="@id/btnEnviarLocalizacao"
        app:layout_constraintTop_toBottomOf="@id/tvNumeroDeTelefoneAtendimentoAceito"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>