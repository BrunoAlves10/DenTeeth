<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCameraActivity"
    android:layout_marginHorizontal="24dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTireUmaSelfie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tire uma selfie"
        android:textSize="30sp"
        android:fontFamily="@font/pacifico"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:src="@drawable/progress_bar_01"
        app:layout_constraintTop_toBottomOf="@+id/tvTireUmaSelfie"
        />

    <androidx.camera.view.PreviewView
        android:id="@+id/CameraPreview"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/barra"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obs: Certifique-se de
        estar em um ambiante iluminado e
        sem objetivos ou pessoas no fundo!"
        android:textSize="15sp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/CameraPreview"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtnCapture"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:elevation="2dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tvObs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeixarDepois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deixar para depois"
        android:textSize="19dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toBottomOf="@+id/mbtnCapture"
        />


</androidx.constraintlayout.widget.ConstraintLayout>